#include<iostream>
using namespace std;
class students
{
  
  int roll_no,count=0;
  char name[6];
  public:
    void getdata(){
      cin>>roll_no>>name;  
    }
    void putdata(){
      cout<<roll_no<<" "<<name<<endl;
    }
};
int main()
{
    int n,i,count=1;
    cout<<"Enter the no. of students: ";
    cin>>n;
    cout<<n<<endl;
    students s[n];
    students *p;
    p=s;
    for(i=0;i<n;i++)
    {
      cout<<count<<". ";
      count++;
     
   /*....1st method to call the class member functions using pointer...
      p->getdata();
      p->putdata();*/
      
  //...2nd method...
      (*p).getdata();
      (*p).putdata();
      p++;    
    }
    return 0;
}
